<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="MarksToGradeEp" xmlns="http://ws.apache.org/ns/synapse">
    <http method="get"   uri-template="http://localhost:9090/get_grade?marks={uri.var.marks}">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
